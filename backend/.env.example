# Environment
NODE_ENV=development

# Server
PORT=3002

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/inker_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Redis Configuration (optional - for Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGINS=http://localhost:3002,http://localhost:80

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
SCREENS_DIR=./uploads/screens
FIRMWARE_DIR=./uploads/firmware

# Device Configuration
DEVICE_POLLING_INTERVAL=60000
DEVICE_OFFLINE_THRESHOLD=300000

# Admin PIN
ADMIN_PIN=1111

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
