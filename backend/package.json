{
  "name": "inker-backend",
  "version": "1.0.0-Alpha",
  "description": "Inker Server Backend - E-ink Device Management",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun run nest build",
    "start": "bun run nest start",
    "start:dev": "bun --watch run src/main.ts",
    "start:debug": "bun --watch --inspect run src/main.ts",
    "start:prod": "bun run dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:studio": "bunx prisma studio",
    "prisma:seed": "bun run prisma/seed.ts",
    "db:seed": "bun run prisma:seed"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^5.1.0",
    "@prisma/client": "^5.8.0",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
    "puppeteer": "^23.11.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.3"
  }
}
